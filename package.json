{
    "name": "advpl-unit-test",
    "displayName": "Advpl Unit Test",
    "description": "Suporte a teste unitario em ADVPL e VsCode",
    "version": "0.0.2",
    "publisher": "KillerAll",
    "extensionDependencies":["KillerAll.advpl-vscode"],
    "engines": {
        "vscode": "^1.14.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onLanguage:advpl",
        "onCommand:advpl.unittest.run"
    ],
    "main": "./out/src/extension",
    "contributes": {
        "commands": [{
                "command": "advpl.unittest.run",
                "title": "Advpl Unit Test - Run - Run current TestCase"
            }]
            ,
        "keybindings": [
            {
                "command": "advpl.unittest.run",
                "key": "ctrl+f12",
                "mac": "cmd+f12",
                "when": "editorLangId == advpl"
            }]
    },
    "scripts": {
        "vscode:prepublish": "tsc -p ./",
        "compile": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "typescript": "^2.0.3",
        "vscode": "^1.0.0",
        "mocha": "^2.3.3",
        "@types/node": "^6.0.40",
        "@types/mocha": "^2.2.32"
    }
}